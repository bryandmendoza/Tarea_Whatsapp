<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TareaWhatsapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/toolbar1</item>

        <!-- Pantalla Bienvenida -->
        <item name="pbBackground">@color/bg1</item>
        <item name="pbLogo">@drawable/light_logo</item>
        <item name="pbTxt1">@color/txt1</item>
        <item name="pbTxt2">@color/txt2</item>

        <!-- Pantalla Principal -->
        <item name="ppBackground">@color/bg1</item>
        <item name="statusBackground">@color/bg2</item>
        <item name="ppToolbar">@color/toolbar1</item>
        <item name="ppTxt1">@color/txt3</item>
        <item name="ppTxt2">@color/txt3</item>
        <item name="ppTxt3">@color/txt1</item>
        <item name="ppTxt4">@color/black</item>

    </style>
</resources>